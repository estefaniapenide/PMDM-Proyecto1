<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1110"
    tools:context=".Ej9Activity">

    <TextView
        android:id="@+id/tvComentario"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="Comentario"
        android:textColor="@color/purple_500"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#1111"
        android:inputType="textCapCharacters"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvLinea"
        app:layout_constraintTop_toBottomOf="@+id/tvComentario" />

    <Button
        android:id="@+id/button18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Voler a la principal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button19"
        style="@style/BOTONES_GRISES"
        android:text="Guardar"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/button20"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button20"
        style="@style/BOTONES_GRISES"
        android:layout_marginEnd="30dp"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button19"
        app:layout_constraintTop_toBottomOf="@+id/tvLinea"
        tools:layout_editor_absoluteY="396dp" />

    <TextView
        android:id="@+id/tvLinea"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#111"
        app:layout_constraintBottom_toTopOf="@+id/button19"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>